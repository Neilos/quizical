<h1>Your Questions</h1>

 <%= link_to "Add a new question", new_question_url, class: "btn btn-mini btn-success" %>
</br>
</br>
<% if @questions == nil %>
  <p>You have not created any questions</p>
<% else %>
  <% @questions.each do | q | %>
    <div id=<%= q.id.to_s %> class="question">
      Question: <%= q.text %>
      </br>
      Answer: <%= q.answer %>
      <%= link_to "delete", q, method: :delete, class: "btn btn-mini btn-danger" %>
      </hr>
    </div>
  <% end %>
<% end %>



