
<div class="row span6 offset3">


 <table class="table">
  <tbody>
    <tr>
      <td>Username: </td>
      <td><%= @user.username %></td>
    </tr>
    <tr>
      <td>Email address: </td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
        <td>Date joined: </td>
      <td><%= @user.created_at.strftime('%d-%m-%Y %H:%M') %></td>
    </tr>
    <tr>
        <td>Games played: </td>
      <td> </td>
    </tr>
    <tr>
        <td>Correct answers: </td>
      <td> </td>
    </tr>
    <tr>
      <td colspan="2">
        <%= link_to 'Edit My Details', edit_user_path(@user), class: "btn btn-mini btn-info pull-right" %>
      </td>
    </tr>
  </tbody>
</table>
</div>




